<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <!-- HG Paint Toolkit bar -->
    <LinearLayout
        android:id="@+id/hg_paint_toolkit"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/hgpaintToolkitColor">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="스타일" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="두깨" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="지우게" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="색상" />
    </LinearLayout>

    <!-- Comment view -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hg_paint_comment"
        android:textStyle="bold"
        android:text="Welcome to HG Paint library"
        android:textColor="@color/canvasPlaceholderColor"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="64dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/hg_paint"
        android:gravity="center"
        android:layout_below="@id/hg_paint_comment"
        android:layout_toStartOf="@id/hg_paint_toolkit">
        <!-- HG Paint View Area -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hg_paint_container"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:padding="8dp"/>

        <!-- Divide Line Top -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:id="@+id/hg_paint_divide_top"
            android:layerType="software"
            android:src="@drawable/hg_paint_divide"
            android:layout_alignTop="@id/hg_paint_container"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:id="@+id/hg_paint_divide_bottom"
            android:layerType="software"
            android:src="@drawable/hg_paint_divide"
            android:layout_alignBottom="@id/hg_paint_container"/>

        <!-- Divide Line Left -->
        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:id="@+id/hg_paint_divide_right"
            android:layerType="software"
            android:src="@drawable/hg_paint_divide_vert"
            android:layout_alignEnd="@id/hg_paint_container"/>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:id="@+id/hg_paint_divide_left"
            android:layerType="software"
            android:src="@drawable/hg_paint_divide_vert"
            android:layout_alignStart="@id/hg_paint_container"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hg_paint_commentlib"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hg_paint_comment_title"
                android:textSize="24sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hg_paint_comment_content"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>