<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <!-- HGPaint Toolbar area -->
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:id="@+id/hg_paint_toolkit"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:gravity="center">
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/hg_paint_tool_penstyle"
            android:src="@drawable/ic_tmp_fordev"
            android:scaleType="centerInside"
            android:background="@null"/>
        <include
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            layout="@layout/hgpaint_hr_line" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/hg_paint_tool_penthickness"
            android:src="@drawable/ic_tmp_fordev"
            android:scaleType="centerInside"
            android:background="@null"/>
        <include
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            layout="@layout/hgpaint_hr_line" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/hg_paint_tool_reset"
            android:src="@drawable/ic_tmp_fordev"
            android:scaleType="centerInside"
            android:background="@null"/>
        <include
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            layout="@layout/hgpaint_hr_line" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/hg_paint_tool_pencolor"
            android:src="@drawable/ic_tmp_fordev"
            android:scaleType="centerInside"
            android:background="@null"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hg_paint_commentlib"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hg_paint_comment_title"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hg_paint_comment_content"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/hg_paint"
        android:gravity="center"
        android:layout_toStartOf="@id/hg_paint_toolkit">
        <!-- HG Paint View Area -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hg_paint_container"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:padding="8dp"/>

        <!-- Divide Line Top -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:id="@+id/hg_paint_divide_top"
            android:layerType="software"
            android:src="@drawable/hg_paint_divide"
            android:layout_alignTop="@id/hg_paint_container"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:id="@+id/hg_paint_divide_bottom"
            android:layerType="software"
            android:src="@drawable/hg_paint_divide"
            android:layout_alignBottom="@id/hg_paint_container"/>

        <!-- Divide Line Left -->
        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:id="@+id/hg_paint_divide_right"
            android:layerType="software"
            android:src="@drawable/hg_paint_divide_vert"
            android:layout_alignEnd="@id/hg_paint_container"/>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:id="@+id/hg_paint_divide_left"
            android:layerType="software"
            android:src="@drawable/hg_paint_divide_vert"
            android:layout_alignStart="@id/hg_paint_container"/>
    </RelativeLayout>

    <!-- HG Toolbar sub context -->
    <FrameLayout
        android:layout_width="54dp"
        android:layout_height="match_parent"
        android:id="@+id/hg_paint_tool_context"
        android:visibility="gone"
        android:background="#ffffff"
        android:layout_margin="8dp"
        android:layout_toStartOf="@id/hg_paint_toolkit"/>
</RelativeLayout>