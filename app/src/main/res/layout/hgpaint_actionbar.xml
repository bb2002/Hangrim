<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="?android:attr/actionBarSize"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/hgpaint_actionbar_back"
            android:background="@null"
            android:src="@drawable/ic_hgpaint_action_back"
            android:scaleType="centerInside"
            android:layout_marginStart="16dp"
            android:padding="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/hgpaint_actionbar_undo"
                android:background="@null"
                android:src="@drawable/ic_hgpaint_action_undo"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp"/>

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/hgpaint_actionbar_redo"
                android:background="@null"
                android:src="@drawable/ic_hgpaint_action_redo"
                android:scaleType="centerInside"
                android:layout_marginStart="16dp"/>
        </LinearLayout>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/hgpaint_actionbar_forward"
            android:background="@null"
            android:padding="4dp"
            android:src="@drawable/ic_hgpaint_action_next"
            android:scaleType="centerInside"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>