<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto">
    <kr.saintdev.hangrim.modules.hgpaint.HGPaint
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/shuffle_paint"
        app:title="@string/shuffle_paint_title"
        app:canvasWidth="-1"
        app:canvasHeight="110"
        app:useDivideTop="true"
        app:useDivideBottom="true"
        app:useDivideLeft="false"
        app:useDivideRight="false" />

    <ir.alirezabdn.wp7progress.WP10ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>