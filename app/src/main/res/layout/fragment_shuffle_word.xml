<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto">
    <kr.saintdev.hgdrawing.hgdrawing.HGPaintView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/canvas"
            app:canvasAlpha="false"
            app:commentTitle="@string/common_loading"
            app:commentContent="@string/common_loading"
            app:divideHorizon="true"
            app:divideVertical="false"
            app:colorToolEnable="false"
            app:placeholder="@string/common_loading"
            app:canvasWidth="-1"
            app:canvasHeight="160" />

    <ir.alirezabdn.wp7progress.WP10ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>